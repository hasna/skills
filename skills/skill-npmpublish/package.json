{
  "name": "@hasnaxyz/skill-npmpublish",
  "version": "0.1.3",
  "description": "Publish npm packages with sensible defaults: private access, patch version bumps",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "skill-npmpublish": "src/index.ts"
  },
  "files": [
    "src",
    "README.md",
    "SKILL.md"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hasnaxyz/skill-npmpublish.git"
  },
  "keywords": [
    "npm",
    "publish",
    "cli",
    "skill",
    "claude",
    "codex"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.0.1",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.5.0",
    "typescript": "^5.7.0"
  }
}
