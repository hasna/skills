{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": [
      "bun"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "bin/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "legacy"
  ]
}
