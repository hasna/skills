{
  "name": "skill-managemcp",
  "version": "0.1.0",
  "type": "module",
  "description": "Manage MCP servers - list, install, remove, and configure MCP server connections",
  "bin": {
    "managemcp": "./bin/cli.ts"
  },
  "scripts": {
    "dev": "bun run --watch src/server/index.ts",
    "start": "bun run src/server/index.ts",
    "cli": "bun run bin/cli.ts",
    "db:migrate": "bun run scripts/migrate.ts",
    "db:seed": "bun run scripts/seed.ts",
    "db:reset": "bun run scripts/migrate.ts && bun run scripts/seed.ts"
  },
  "dependencies": {
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  },
  "author": "Hasna",
  "license": "Apache-2.0"
}
